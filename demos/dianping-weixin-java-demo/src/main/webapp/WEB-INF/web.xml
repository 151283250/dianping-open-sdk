<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>DP-Weixin</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
 
   <servlet>
    <display-name>MessageServlet</display-name>
    <servlet-name>Message</servlet-name>
    <servlet-class>com.dianping.open.app.weixin.MessageServlet</servlet-class>
  </servlet>
  
   <servlet>
    <display-name>AssistantServlet</display-name>
    <servlet-name>Assistant</servlet-name>
    <servlet-class>com.dianping.open.app.weixin.AssistantServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Message</servlet-name>
    <url-pattern>/message</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Assistant</servlet-name>
    <url-pattern>/assistant</url-pattern>
  </servlet-mapping>
 
</web-app>
